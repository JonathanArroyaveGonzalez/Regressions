import Layout from "../layouts/Layout.astro";
import Content from "../components/Content.astro";
---

<Layout title="Análisis de Regresiones - Physics Lab">
  <main>
    <!-- Contenedor oculto solo para exportar la imagen -->
    <div id="export-container" style="background: transparent; display:none; position: absolute; left: -9999px; top: 0;">
      <div id="content-text-export"></div>
      <div id="content-graph-export"></div>
    </div>

    <svg
      class="astro-a"
      width="495"
      height="623"
      viewBox="0 0 495 623"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path
        fill-rule="evenodd"
        clip-rule="evenodd"
