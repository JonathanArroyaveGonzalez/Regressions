      <Card
        href="tutorial/"
        title="Tutorial 游"
        body="Aprende a realizar regresiones con nuestra guia paso a paso."
      />
      <Card
        href="acerca-de/"
        title="Acerca de 游눠"
        body="Informaci칩n sobre nosotros y el proyecto."
      />
    </ul>
  </main>

  <!-- El script de tema ya est치 incluido globalmente desde Layout.astro -->
  <script type="module">
  import { downloadElementAsImage } from '/download.js';
    document.getElementById('download-btn').addEventListener('click', function() {
      // Clonar ecuaci칩n, gr치fica y tabla al contenedor de exportaci칩n
      const contentText = document.getElementById('content-text');
      const contentGraph = document.querySelector('.content-graph');
      const exportText = document.getElementById('content-text-export');
      const exportGraph = document.getElementById('content-graph-export');
      if (contentText && exportText) {
        exportText.innerHTML = contentText.innerHTML;
      }
      if (contentGraph && exportGraph) {
        exportGraph.innerHTML = contentGraph.innerHTML;
        exportGraph.className = contentGraph.className;
      }
      // Inyectar todos los estilos globales y locales para la exportaci칩n
      const exportContainer = document.getElementById('export-container');
      let styles = '';
      document.querySelectorAll('style, link[rel="stylesheet"]').forEach(style => {
        if (style.tagName === 'STYLE') styles += style.innerHTML;
      });
      let style = document.createElement('style');
      style.innerHTML = styles;
      exportContainer.appendChild(style);
      exportContainer.style.display = 'block';
      // Descargar solo el contenedor de ecuaci칩n, gr치fica y tabla
      setTimeout(() => {
        downloadElementAsImage('export-container', 'grafica_tabla.png');
        // Limpiar estilos despu칠s de descargar
        setTimeout(()=>{
          exportContainer.style.display = 'none';
          if (style.parentNode) style.parentNode.removeChild(style);
        }, 500);
      }, 100);
    });
  </script>
  <script type="module" src="/download.js"></script>
  <style>
    html.light-theme {
      --accent: 136, 58, 234;
      --accent-light: 49, 10, 101;
      --accent-dark: 224, 204, 250;
      background: #f7f7f7;
      color: #181818;
    }
    html.light-theme main {
      color: #181818;
    }
    html.light-theme .instructions {
      border: 1px solid #bdbdbd;
      background: linear-gradient(rgba(255,255,255,0.95), rgba(245,245,245,0.85));
      color: #181818;
    }
    html.light-theme .instructions code {
      background: #ececec;
      color: #007bff;
    }
    html.light-theme .instructions strong {
      color: #007bff;
    }
    html.light-theme .link-card > a {
      color: #181818;
      background-color: #fff;
      opacity: 1;
    }
    html.light-theme .button-tutorial {
      color: #fff;
      background-color: #007bff;
      border-color: #007bff;
    }
    html.light-theme .button-tutorial:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
    html.light-theme .button-tutorial:active {
      background-color: #003d7f;
      border-color: #003d7f;
    }
    html.dark-theme {
      background: #13151a;
      color: #fff;
    }
    a img {
      width: 100%;
      height: auto;
    }

    .button-container {
      text-align: center;
    }
    #text-welcome {
      text-align: center; /* Centra el contenido horizontalmente */
    }

    /* Estilo del bot칩n */
    .button-tutorial {
      display: inline-block;
      padding: 10px 20px;
      font-size: 16px;
      font-weight: bold;
      text-decoration: none;
      color: #fff;
      background-color: #007bff;
      border: 2px solid #007bff;
      border-radius: 5px;
      cursor: pointer;
      transition:
        background-color 0.3s,
        border-color 0.3s,
        color 0.3s;
    }

    /* Estilo al pasar el mouse por encima */
    .button-tutorial:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    /* Estilo al hacer clic */
    .button-tutorial:active {
      background-color: #003d7f;
      border-color: #003d7f;
    }
    main {
      margin: auto;
      padding: 1rem;
      width: 800px;
      max-width: calc(100% - 2rem);
      color: white;
      font-size: 20px;
      line-height: 1.6;
    }
    .astro-a {
      position: absolute;
      top: -32px;
      left: 50%;
      transform: translatex(-50%);
      width: 220px;
      height: auto;
      z-index: -1;
    }
    h1 {
      font-size: 4rem;
      font-weight: 700;
      line-height: 1;
      text-align: center;
      margin-bottom: 1em;
    }
    .text-gradient {
      background-image: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
    }
    .instructions {
      margin-bottom: 2rem;
      border: 1px solid rgba(var(--accent-light), 25%);
      background: linear-gradient(
        rgba(var(--accent-dark), 66%),
        rgba(var(--accent-dark), 33%)
      );
      padding: 1.5rem;
      border-radius: 8px;
    }
    .instructions code {
      font-size: 0.8em;
      font-weight: bold;
      background: rgba(var(--accent-light), 12%);
      color: rgb(var(--accent-light));
      border-radius: 4px;
      padding: 0.3em 0.4em;
    }
    .instructions strong {
      color: rgb(var(--accent-light));
    }
    .link-card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
      gap: 2rem;
      padding: 0;
    }
  </style>
</Layout>
