    dark: "https://readme-typing-svg.herokuapp.com?font=Fira+Code&pause=1000&color=F3F7E7AC&background=FF238200&center=true&random=false&width=435&height=70&lines=%C2%A1%F0%9F%91%8BBienvenido+a+nuestra++pagina+%F0%9F%91%8B!;Quieres+saber+mas+..%F0%9F%9A%80",
    light: "https://readme-typing-svg.herokuapp.com?font=Fira+Code&pause=1000&color=000000&background=FF238200&center=true&random=false&width=435&height=70&lines=%C2%A1%F0%9F%91%8BBienvenido+a+nuestra++pagina+%F0%9F%91%8B!;Quieres+saber+mas+..%F0%9F%9A%80"
  };

  function updateTypingSvg() {
    const typingSvgImg = document.getElementById('typing-svg') as HTMLImageElement;
    if (!typingSvgImg) return;
    
    const isLightTheme = document.documentElement.classList.contains('light-theme');
    const newUrl = isLightTheme ? typingSvgUrls.light : typingSvgUrls.dark;
    
    if (typingSvgImg.src !== newUrl) {
      typingSvgImg.src = newUrl;
    }
  }

  // Actualizar la imagen cuando se carga la página
  document.addEventListener('DOMContentLoaded', updateTypingSvg);

  // Observar cambios en las clases del html para detectar cambios de tema
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
        updateTypingSvg();
      }
    });
  });

  // Iniciar la observación
  observer.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ['class']
  });

  // Actualizar inmediatamente si ya hay un tema establecido
  updateTypingSvg();
</script>

