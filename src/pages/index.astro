    </div>

    <!-- Visualizaci칩n real de la gr치fica y tabla debajo de la entrada de datos -->
    <div id="content-text"></div>
    <div class="content-graph">
      <div id="graph-container"></div>
      <div id="data-table"></div>
    </div>

    <!-- Contenedor oculto solo para exportar la imagen -->
    <div id="export-container" style="background: transparent; display:none;">
      <div id="content-text-export"></div>
      <div class="content-graph">
        <div id="graph-container-export"></div>
        <div id="data-table-export"></div>
